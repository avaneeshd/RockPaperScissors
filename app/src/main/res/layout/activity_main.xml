<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="apps.avaneesh.com.rockpaperscissors.MainActivity"
    android:id="@+id/mainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/rps"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hello!!"
        android:id="@+id/txtHello"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speak"
        android:id="@+id/btnSpeak"
        android:layout_toEndOf="@+id/imageView"
        android:layout_above="@+id/btnRock"
        android:layout_toRightOf="@+id/imageView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSpeak"
        android:layout_below="@+id/txtHello"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:width="200dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rock"
        android:id="@+id/btnRock"
        android:layout_toStartOf="@+id/btnSpeak"
        android:layout_marginTop="36dp"
        android:layout_toEndOf="@+id/txtHello"
        android:layout_below="@+id/txtSpeak"
        android:layout_alignLeft="@+id/btnPaper"
        android:layout_alignStart="@+id/btnPaper" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paper"
        android:id="@+id/btnPaper"
        android:layout_toStartOf="@+id/btnSpeak"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/btnRock"
        android:layout_alignLeft="@+id/btnScissors"
        android:layout_alignStart="@+id/btnScissors" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scissors"
        android:id="@+id/btnScissors"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/btnPaper"
        android:layout_toLeftOf="@+id/btnSpeak"
        android:layout_toStartOf="@+id/btnSpeak" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/total_games"
        android:id="@+id/textView2"
        android:layout_toStartOf="@+id/btnScissors"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/wins"
        android:id="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnScissors"
        android:layout_toEndOf="@+id/btnScissors"
        android:layout_alignRight="@+id/btnSpeak"
        android:layout_alignEnd="@+id/btnSpeak" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/total_games"
        android:layout_toStartOf="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txtSpeak"
        android:layout_alignEnd="@+id/txtSpeak"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/wins_score"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

</RelativeLayout>
